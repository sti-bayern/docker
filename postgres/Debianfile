FROM akilli/base:debian

LABEL maintainer="Ayhan Akilli"

#
# Environment variables
#
ENV PGDATA=/data \
    PGPASS=app

#
# Setup
#
RUN apt-get -y update && \
    apt-get -y --no-install-recommends install \
        postgresql \
        postgresql-contrib && \
    apt-get -y --purge autoremove && \
    apt-get -y clean && \
    rm -rf \
        /var/lib/apt/lists/*
        /var/lib/postgresql && \
    mkdir -p \
        /init/postgres \
        /run/postgresql && \
    chown -R app:app /run/postgresql

COPY rootfs/ /

#
# Ports
#
EXPOSE 5432
